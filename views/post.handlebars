<form class="post-container">
  <input id="post-title" type="text" name="title" value="{{title}}">
  <p class="post-meta">By {{User.username}} on {{date_created}}</p>
  <textarea id="post-content" name="body">{{body}}</textarea>
  {{#if logged_in}}
    <button id="update-btn" class="btn btn-sm btn-primary" data-id="{{id}}">UPDATE</button>
    {{!-- Delete button --}}
    <button id="delete-btn" class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
  {{/if}}
</form>

<div class="comment-container">
  {{#if comments.length}}
    <h3>Comments:</h3>
    {{#each comments}}
      <div class="comment">
        <p class="comment-meta">By {{User.username}} on {{date_created}}</p>
        <p>{{body}}</p>
      </div>
    {{/each}}
  {{else}}
    <p>No comments yet.</p>
  {{/if}}
</div>

<script src="/js/deletePost.js"></script>
